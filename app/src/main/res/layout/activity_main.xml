<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhongxiong.com.weibo.MainActivity">

    <FrameLayout
        android:id="@+id/fl_contnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/RadioButtonBottomTob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/contact"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/RadioButtonBottomTob"
            android:layout_width="0dp"
            android:drawableTop="@drawable/message"
            android:text="消息"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/RadioButtonBottomTob"
            android:layout_width="0dp"
            android:drawableTop="@drawable/discovery"
            android:text="发现"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/RadioButtonBottomTob"
            android:layout_width="0dp"
            android:drawableTop="@drawable/me"
            android:text="我"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </RadioGroup>

</LinearLayout>
